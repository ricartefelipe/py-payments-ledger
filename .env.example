APP_ENV=local
APP_NAME=py-payments-ledger
HTTP_HOST=0.0.0.0
HTTP_PORT=8000

DATABASE_URL=postgresql+psycopg://app:app@postgres:5432/app
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# E2E com Fluxe B2B Suite: use os mesmos valores do spring-saas-core
# JWT_SECRET=local-dev-secret-min-32-chars-for-hs256-signing
# JWT_ISSUER=spring-saas-core
JWT_SECRET=change-me
JWT_ISSUER=local-auth
TOKEN_EXPIRES_SECONDS=3600

RATE_LIMIT_WRITE_PER_MIN=60
RATE_LIMIT_READ_PER_MIN=240

IDEMPOTENCY_TTL_SECONDS=86400

CHAOS_ENABLED=false
CHAOS_FAIL_PERCENT=0
CHAOS_LATENCY_MS=0

ORDERS_INTEGRATION_ENABLED=true
ORDERS_EXCHANGE=orders.x
ORDERS_QUEUE=payments.orders.events
ORDERS_ROUTING_KEYS=payment.charge_requested,order.confirmed

# Production: comma-separated allowed origins (e.g. https://app.example.com)
# Empty in local = CORS allows *
# CORS_ORIGINS=https://app.example.com,https://admin.example.com
