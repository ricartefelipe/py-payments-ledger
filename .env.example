APP_ENV=local
APP_NAME=py-payments-ledger
HTTP_HOST=0.0.0.0
HTTP_PORT=8000

DATABASE_URL=postgresql+psycopg://app:app@postgres:5432/app
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

JWT_SECRET=change-me
JWT_ISSUER=local-auth
TOKEN_EXPIRES_SECONDS=3600

RATE_LIMIT_WRITE_PER_MIN=60
RATE_LIMIT_READ_PER_MIN=240

# Chaos controls (admin endpoints can also set these at runtime)
CHAOS_ENABLED=false
CHAOS_FAIL_PERCENT=0
CHAOS_LATENCY_MS=0
